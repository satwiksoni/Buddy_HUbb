<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Buddy_HuBB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Main_orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedImageView">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">60dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.Buddy_HuBB">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/gradient_start</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RoundedImageViewSmall">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>

</style>

    <style name="ChatShapeAppearance">
        <item name="color">@color/dark_orange</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">22dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>

    </style>
-<style name="CustomMediumShapeAppearance">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">22dp</item>
    <item name="cornerSizeBottomLeft">8dp</item>
    <item name="cornerSizeBottomRight">22dp</item>
    <item name="cornerSizeTopRight">22dp</item>

</style>


</resources>
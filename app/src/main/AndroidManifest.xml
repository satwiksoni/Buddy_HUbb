<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buddy_hubb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buddy_HuBB">
        <activity android:name=".crypto.DES"></activity>
        <activity android:name=".crypto.MD5" />
        <activity android:name=".crypto.RSA" />

        <activity android:name=".crypto.AES" />
        <activity android:name=".ProfileEditActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".ChatActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.SigninActivity" />
        <activity android:name=".auth.OtpActivity" />
        <activity android:name=".auth.PhoneActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>